module OwlUnit {
  fn assert(value) {
    if !value {
      print("Assertion failed!")
      print(value)
      exit(1)
    }
  }

  fn refute(value) {
    if value {
      print("Assertion failed!")
      print(value)
      exit(1)
    }
  }

  fn assert_eq(left, right) {
    if left != right {
      print("Assertion failed!")
      print(left)
      print(right)
      exit(1)
    }
  }

  fn refute_eq(left, right) {
    if left == right {
      print("Assertion failed!")
      print(left)
      print(right)
      exit(1)
    }
  }
}
