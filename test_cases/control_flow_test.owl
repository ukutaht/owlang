module control_flow_test {
  fn gimme_one() {
    if true {
      1
    }
  }

  fn two_in_else() {
    if false {
      1
    } else {
      2
    }
  }

  fn nested_three() {
    if false {
      1
    } else {
      if true {
        3
      } else {
        2
      }
    }
  }

  fn nil_is_falsey() {
    if nil {
      1
    } else {
      2
    }
  }

  fn nil_is_returned_in_empty_else() {
    if false {
      1
    }
  }

  fn main() {
    owl_unit:assert_eq(gimme_one(), 1)
    owl_unit:assert_eq(two_in_else(), 2)
    owl_unit:assert_eq(nested_three(), 3)
    owl_unit:assert_eq(nil_is_falsey(), 2)
    owl_unit:assert_eq(nil_is_returned_in_empty_else(), nil)
  }
}
